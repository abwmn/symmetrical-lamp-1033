<h1><%= @customer.name %></h1>

<h2>Items:</h2>
<ul id="items">
  <% @customer.items.each do |item| %>
    <li>
      Name: <%= item.name %><br>
      Price: <%= item.price %><br>
      Supermarket: <%= item.supermarket_name %>
    </li>
  <% end %>
</ul>

<h2>Add Item:</h2>
<%= form_with url: add_item_path(@customer), method: :post do |f| %>
  <%= f.label :item_id, "Item ID: " %>
  <%= f.number_field :item_id %>
  <%= f.submit "Add Item" %>
<% end %>
